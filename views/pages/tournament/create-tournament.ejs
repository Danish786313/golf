<!-- start page content -->
<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-left">
                    <div class="page-title"><%= __('Create Tournament') %></div>
                </div>
                <ol class="breadcrumb page-breadcrumb pull-right">
                    <li><i class="fa fa-home"></i>&nbsp;<a class="parent-item"
                            href="/admin/dashboard"><%= __('Home') %></a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li><a class="parent-item" href=""><%= __('Tournament') %></a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li><a class="parent-item" href=""><%= __('Create Tournament') %></a></li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="card card-box">
                    <div class="card-head">
                        
                    </div>
                    <div class="card-body" id="bar-parent">
                        <!-- MESSAGE CONTAINER START -->
				        <div>
                            <% if(message != '') { %>
                                <div id="myDivSuccess" class="alert alert-dismissible fade show mb-0" style="background-color: rgb(183, 237, 183); border: none; color: rgb(2, 120, 2);" role="alert">
                                    <%= message %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" onclick="hideDivSuccess()"></button>
                                </div>
                                
                                <script>
                                    function hideDivSuccess() {
                                        var div = document.getElementById('myDivSuccess');
                                        div.style.display = 'none';
                                    }
                                </script>                        
                            <% } else if(error != ''){ %>
                                <div id="myDiv" class="alert alert-dismissible fade show mb-0" style="background-color: rgb(237 183 183); border: none; color: rgb(120 2 2);" role="alert">
                                    <%= error %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" onclick="hideDiv()"></button>
                                </div>
                                <script>
                                    function hideDiv() {
                                      var div = document.getElementById('myDiv');
                                      div.style.display = 'none';
                                    }
                                </script>
                            <% } %>
                        </div>
				        <!-- MESSAGE CONTAINER END -->
                        <form action="/admin/create-tournament" method="post" id="form_sample_1" class="form-horizontal">
                            <div class="form-body">
                                <div class="form-group row">
                                    <label class="control-label col-md-3"><%= __('Name') %>
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        <input type="text" name="name" data-required="1"
                                            placeholder="" required                                     
                                            class="form-control input-height" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3"><%= __('Course') %>
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        <select class="form-control input-height" id="inputID"  name="course_id" required>
                                            <option selected="selected" value="" >Select</option>
                                            <% courses.forEach((course, index) => { %>
                                                <option value="<%= course.id %>"><%= course.name %></option>
                                            <% }) %>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3"><%= __('Bet amount') %>
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        <input type="number" name="bet_amount" data-required="1"
                                            placeholder="" required                                        
                                            class="form-control input-height" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3"><%= __('Number of rounds') %>
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        <input type="number" name="no_of_rounds" data-required="1"
                                            placeholder="" required                                        
                                            class="form-control input-height" />
                                    </div>
                                </div>                    
                                <div class="form-group row">
                                    <label class="control-label col-md-3"><%= __('Start date') %>
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        <div id="dateIcon2" class="input-append date">
                                            <div  class="input-group datePicker">
                                                <input class="formDatePicker form-control" type="date"
                                                    placeholder="Select Date.." name="start_date" required
                                                    data-input>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3"><%= __('End date') %>
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        <div id="dateIcon" class="input-append date">
                                            <div class="input-group datePicker">
                                                <input class="formDatePicker form-control" type="date"
                                                    placeholder="Select Date.." name="end_date" required
                                                    data-input>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3"><%= __('Registration start date') %>
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        <div id="dateIcon3" class="input-append date">
                                            <div  class="input-group datePicker">
                                                <input class="formDatePicker form-control" type="date" required
                                                    placeholder="Select Date.." name="registration_start_date" 
                                                    data-input>
                                            </div>
                                        </div>
                                    </div>
                                </div>                                
                                <div class="form-group row">
                                    <label class="control-label col-md-3"><%= __('Registration end date') %>
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        <div id="dateIcon4" class="input-append date">
                                            <div  class="input-group datePicker">
                                                <input class="formDatePicker form-control" type="date" required
                                                    placeholder="Select Date.." name="registration_end_date" 
                                                    data-input>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3"><%= __('Max players allow') %>
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        <input type="text" name="max_players" data-required="1"
                                            placeholder="" required                               
                                            class="form-control input-height" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3"><%= __('Betting type') %>
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        <select class="form-control input-height" name="betting_type" required>
                                            <option selected="selected" value="" >Select</option>
                                            <option value="STROKE">Stroke</option>
                                            <option value="SKIN">Skin</option>
                                            <option value="STABLE">Stable</option>
                                            <option value="STABLE_NEGATIVE">Stable negative</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3"><%= __('Category') %>
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-5">
                                        <select class="form-control input-height" name="category_id" required>
                                            <option selected="selected" value="" >Select</option>
                                            <% category.forEach((category, index) => { %>
                                                <option value="<%= category.id %>"><%= category.name %></option>
                                            <% }) %>
                                        </select>
                                    </div>
                                </div>
                            <div class="form-actions">
                            <div class="col-lg-12 p-t-20 text-center">
                                <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 m-r-20 btn-circle btn-primary"><%= __('Submit') %></button>
                                <button type="button"
                                    class="reset mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 btn-circle btn-danger"><%= __('Cancel') %></button>
                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end page content -->
<script>
    (function($) {
      'use strict';
      $(function() {
          $(".reset").click(function() {
              $(this).closest('form').find("input[type=text], textarea").val("");
              $(this).closest('form').find("input[type=number], textarea").val("");
              $(this).closest('form').find("input[type=file], textarea").val("");
          });
      });
    })(jQuery);
  </script>